syntax = "proto3";

package gauth;

option go_package = "github.com/imakiri/gauth";

import "google/protobuf/empty.proto";
import "types";

service Registration {
  rpc Begin(types.RequestRegistrationBegin) returns (types.ResponseKeys);
  rpc Complete(types.RequestComplete) returns (types.ResponseKeys);
}

service Authentication {
  rpc Begin(types.RequestAuthenticationBegin) returns (types.ResponseKeys);
  rpc Complete(types.RequestComplete) returns (types.ResponseKeys);
}

service Authorization {
  rpc Authorize(types.RequestAuthorization) returns (google.protobuf.Empty);
}

service Group {
  rpc Create() returns ();
  rpc Modify() returns ();
  rpc Delete() returns ();
}

